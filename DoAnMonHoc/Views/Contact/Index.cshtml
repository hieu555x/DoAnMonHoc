
@{
    ViewBag.Title = "Liên Hệ";
}
<!-- Modal -->
<div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="w-100 pt-1 mb-5 text-right">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="" method="get" class="modal-content modal-body border-0 p-0">
            <div class="input-group mb-2">
                <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                <button type="submit" class="input-group-text bg-success text-light">
                    <i class="fa fa-fw fa-search text-white"></i>
                </button>
            </div>
        </form>
    </div>
</div>


<!-- Start Content Page -->
<div class="container-fluid bg-light py-5">
    <div class="col-md-6 m-auto text-center">
        <h1 class="h1">Địa chỉ công ty của chúng tôi</h1>
        <p>
            Chúng tôi đảm bảo chất lượng của các linh phụ kiện được chúng tôi bán ra là chính hãng và được kiểm duyệt chất lượng qua nhiều khâu nghiêm ngặt
        </p>
    </div>
</div>

<!-- Start Map -->
<div id="mapid" style="width: 100%; height: 300px;">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.284899813032!2d106.72572561483693!3d10.865921960506501!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317527f73a0b27e7%3A0xd55f47f20d07ecfc!2sChung%20C%C6%B0%20Sunview%20Town!5e0!3m2!1svi!2s!4v1620387530548!5m2!1svi!2s" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe></div>

<!-- Ena Map -->
<!-- Start Contact -->
<div class="container py-5">
    <h1 class="h1" style="text-align:center">Đóng góp ý kiến cho chúng tôi</h1>

    <div class="row py-5">
        <p>@ViewBag.ThongBao</p>
        <form class="col-md-9 m-auto" method="post" role="form">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="row">
                    <div class="form-group col-md-6 mb-3">
                        <label for="name">Tên khách hàng</label>
                        <input style="color:black;background-color:white" type="text" class="form-control mt-1" id="name" name="name" placeholder="Tên khách hàng" required>
                    </div>
                    <div class="form-group col-md-6 mb-3">
                        <label for="email">Email</label>
                        <input style="color:black;background-color:white" type="email" class="form-control mt-1" id="email" name="email" placeholder="Email" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="subject">Số điện thoại</label>
                    <input style="color:black;background-color:white" type="text" class="form-control mt-1" id="subject" name="subject" placeholder="Số điện thoại" required>
                </div>
                <div class="mb-3">
                    <label for="message">Đóng góp ý kiến</label>
                    <textarea style="color:black;background-color:white" class="form-control mt-1" id="message" name="message" placeholder="Ý kiến đóng góp cho chúng tôi" rows="8" required></textarea>
                </div>
                <div class="row">
                    <div class="col text-end mt-2">
                        <button type="submit" class="btn btn-success btn-lg px-3">Gửi</button>
                    </div>
                </div>
            }
            
        </form>
    </div>
</div>
<!-- End Contact -->