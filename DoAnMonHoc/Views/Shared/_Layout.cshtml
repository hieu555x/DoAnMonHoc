
@using DoAnMonHoc.Models
<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href=@Url.Content("~/Content/assets/img/apple-icon.png")>
    <link rel="shortcut icon" type="image/x-icon" href=@Url.Content("~/Content/assets/img/1.ico")>

    <link rel="stylesheet" href=@Url.Content("~/Content/assets/css/bootstrap.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/assets/css/templatemo.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/assets/css/custom.css")>

    <!-- Load fonts style after rendering the layout styles -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
    <link rel="stylesheet" href=@Url.Content("~/Content/assets/css/fontawesome.min.css")>
    <!--

    TemplateMo 559 Spader Shop

    https://templatemo.com/tm-559-Spader-shop

    -->

    <link href=@Url.Content("~/Content/assets/css/slick-theme.css") rel="stylesheet" />
    <link href=@Url.Content("~/Content/assets/css/slick-theme.min.css") rel="stylesheet" />
    <link href=@Url.Content("~/Content/assets/css/slick.min.css") rel="stylesheet" />
    <link href=@Url.Content("~/Content/assets/css/templatemo.min.css") rel="stylesheet" />
</head>
<body>
    <!-- Start Top Nav -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-light d-none d-lg-block" id="templatemo_nav_top">
        <div class="container text-light">
            <div class="w-100 d-flex justify-content-between">
                <div>
                    <i class="fa fa-envelope mx-2"></i>
                    <a class="navbar-sm-brand text-light text-decoration-none" href="mailto:hieu555x@gmail.com">hieu555x@gmail.com</a>
                    <i class="fa fa-phone mx-2"></i>
                    <a class="navbar-sm-brand text-light text-decoration-none" href="tel:0984015598">0984015598</a>
                </div>
                <div>
                    <a class="text-light" href="https://fb.com/hieu.spader" target="_blank" rel="sponsored"><i class="fab fa-facebook-f fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="https://twitter.com/" target="_blank"><i class="fab fa-twitter fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="https://www.linkedin.com/" target="_blank"><i class="fab fa-linkedin fa-sm fa-fw"></i></a>
                </div>
            </div>
        </div>
    </nav>
    <!-- Close Top Nav -->
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light shadow">
        <div class="container d-flex justify-content-between align-items-center">

            <a class="navbar-brand text-success logo h1 align-self-center" href=@Url.Action("Index","Home")>
                Spader
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="align-self-center collapse navbar-collapse flex-fill  d-lg-flex justify-content-lg-between" id="templatemo_main_nav">
                <div class="flex-fill">
                    <ul class="nav navbar-nav d-flex justify-content-between mx-lg-auto">
                        <li class="nav-item">
                            <a class="nav-link" href=@Url.Action("Index","Home")>Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href=@Url.Action("Index","Shop")>Sản Phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href=@Url.Action("Index","About")>Về Chúng Tôi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href=@Url.Action("Index","Contact")>Liên Hệ</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar align-self-center d-flex">
                    <div class="d-lg-none flex-sm-fill mt-3 mb-4 col-7 col-sm-auto pr-3">
                        <div class="input-group">
                            <input type="text" class="form-control" id="inputMobileSearch" placeholder="Search ...">
                            <div class="input-group-text">
                                <i class="fa fa-fw fa-search"></i>
                            </div>
                        </div>
                    </div>
                    <a class="nav-icon position-relative text-decoration-none" href="@Url.Action("Index","Cart")" style="padding-right:50px">
                        <i class="fa fa-fw fa-cart-arrow-down text-dark mr-1"></i>
                        <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">@Html.Action("GioHangPartial", "Cart")</span>
                    </a>
                    <a class="nav-icon position-relative text-decoration-none" href=@Url.Action("DangNhap","User")>
                        <i class="fa fa-fw fa-user text-dark mr-3"></i>
                        <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">@TempData["Ten"]</span>
                    </a>
                    <a style="margin-left:30px" class="nav-icon position-relative text-decoration-none" href=@Url.Action("DangXuat","User")>
                        <i class="fa fa-fw fa-sign-out-alt text-dark mr-3"></i>
                        <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark"></span>
                    </a>
                </div>
            </div>

        </div>
    </nav>
    @{
        TempData.Keep("Ten");
    }
    <!-- Close Header -->
    <!-- Modal -->
    <div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="w-100 pt-1 mb-5 text-right">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="" method="get" class="modal-content modal-body border-0 p-0">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                    <button type="submit" class="input-group-text bg-success text-light">
                        <i class="fa fa-fw fa-search text-white"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
    @RenderBody()
        <!-- Start Footer -->
        <footer class="bg-dark" id="tempaltemo_footer">
            <div class="container">
                <div class="row">

                    <div class="col-md-4 pt-5">
                        <h2 class="h2 text-success border-bottom pb-3 border-light logo">Spader Shop</h2>
                        <ul class="list-unstyled text-light footer-link-list">
                            <li>
                                <i class="fas fa-map-marker-alt fa-fw"></i>
                                1144 Lê Đức Thọ Thành Phố Hồ Chí Minh
                            </li>
                            <li>
                                <i class="fa fa-phone fa-fw"></i>
                                <a class="text-decoration-none" href="tel:0984015598">0984015598</a>
                            </li>
                            <li>
                                <i class="fa fa-envelope fa-fw"></i>
                                <a class="text-decoration-none" href="mailto:hieu55x@gmail.com">hieu55x@gmail.com</a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-md-4 pt-5">
                        <h2 class="h2 text-light border-bottom pb-3 border-light">Các Loại Linh Kiện</h2>
                        <ul class="list-unstyled text-light footer-link-list">
                            @{ 
                                CommonInfo data = (CommonInfo)HttpContext.Current.Application["DungChung"];
                            }
                            @foreach (var item in data.TheLoai())
                            {
                                <li><a class="text-decoration-none" href=@Url.Action("SPTheoTheLoai","Shop",new { id = item.MaTheLoai })>@item.TenTheLoai</a></li>
                            }
                        </ul>
                    </div>

                    <div class="col-md-4 pt-5">
                        <h2 class="h2 text-light border-bottom pb-3 border-light">Thông Tin Thêm</h2>
                        <ul class="list-unstyled text-light footer-link-list">
                            <li><a class="text-decoration-none" href=@Url.Action("Index","Home")>Trang Chủ</a></li>
                            <li><a class="text-decoration-none" href=@Url.Action("Index","Shop")>Sản Phẩm</a></li>
                            <li><a class="text-decoration-none" href=@Url.Action("Index","About")>Về Chúng Tôi</a></li>
                            <li><a class="text-decoration-none" href=@Url.Action("Index","Contact")>Liên Hệ</a></li>
                        </ul>
                    </div>

                </div>

                <div class="row text-light mb-4">
                    <div class="col-12 mb-3">
                        <div class="w-100 my-3 border-top border-light"></div>
                    </div>
                    <div class="col-auto me-auto">
                        <ul class="list-inline text-left footer-icons">
                            <li class="list-inline-item border border-light rounded-circle text-center">
                                <a class="text-light text-decoration-none" target="_blank" href="http://facebook.com/"><i class="fab fa-facebook-f fa-lg fa-fw"></i></a>
                            </li>
                            <li class="list-inline-item border border-light rounded-circle text-center">
                                <a class="text-light text-decoration-none" target="_blank" href="https://www.instagram.com/"><i class="fab fa-instagram fa-lg fa-fw"></i></a>
                            </li>
                            <li class="list-inline-item border border-light rounded-circle text-center">
                                <a class="text-light text-decoration-none" target="_blank" href="https://twitter.com/"><i class="fab fa-twitter fa-lg fa-fw"></i></a>
                            </li>
                            <li class="list-inline-item border border-light rounded-circle text-center">
                                <a class="text-light text-decoration-none" target="_blank" href="https://www.linkedin.com/"><i class="fab fa-linkedin fa-lg fa-fw"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-auto">
                        <label class="sr-only" for="subscribeEmail">Địa Chỉ Email</label>
                        <div class="input-group mb-2">
                            <input type="text" class="form-control bg-dark border-light" id="subscribeEmail" placeholder="Địa chỉ Email">
                            <div class="input-group-text btn-success text-light">Theo Dõi</div>
                        </div>
                    </div>
                </div>
            </div>

        

        </footer>
        <!-- End Footer -->
        <!-- Start Script -->
        <script src=@Url.Content("~/Content/assets/js/jquery-1.11.0.min.js")></script>
        <script src=@Url.Content("~/Content/assets/js/jquery-migrate-1.2.1.min.js")></script>
        <script src=@Url.Content("~/Content/assets/js/bootstrap.bundle.min.js")></script>
        <script src=@Url.Content("~/Content/assets/js/templatemo.js")></script>
        <script src=@Url.Content("~/Content/assets/js/custom.js")></script>
        <script src=@Url.Content("~/Content/assets/js/slick.min.js")></script>
        <script src=@Url.Content("~/Content/assets/js/templatemo.min.js")></script>
        <!-- End Script -->
    </body>
    </html>