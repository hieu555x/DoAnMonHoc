
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>@ViewBag.Title</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto:400,700"
    />
    <!-- https://fonts.google.com/specimen/Roboto -->
    <link rel="stylesheet" href=@Url.Content("~/Areas/Admin/Content/css/fontawesome.min.css") />
    <!-- https://fontawesome.com/ -->
    <link rel="stylesheet" href=@Url.Content("~/Areas/Admin/Content/jquery-ui-datepicker/jquery-ui.min.css") type="text/css" />
    <!-- http://api.jqueryui.com/datepicker/ -->
    <link rel="stylesheet" href=@Url.Content("~/Areas/Admin/Content/css/bootstrap.min.css") />
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href=@Url.Content("~/Areas/Admin/Content/css/templatemo-style.css")>
    <!--
	Product Admin CSS Template
	https://templatemo.com/tm-524-product-admin-->
</head>
<body>
    <nav class="navbar navbar-expand-xl">
        <div class="container h-100">
            <a class="navbar-brand" href=@Url.Action("Index","AdminHome","Admin")>
                <h1 class="tm-site-title mb-0">Quản Lý ADMIN</h1>
            </a>
            <button class="navbar-toggler ml-auto mr-0"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-bars tm-nav-icon"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto h-100">
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index","AdminHome","Admin")>
                            <i class="fas fa-tachometer-alt"></i> Trang Chủ
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("SanPham","AdminHome","Admin")>
                            <i class="fas fa-shopping-cart"></i> Sản Phẩm
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link d-block" href=@Url.Action("Login","AdminHome","Admin")>
                            @if (TempData["admin"] == null)
                            {
                                <p>Đăng Nhập</p>
                            }
                            else
                            {
                                <p>Đăng Xuất</p>
                            }
                        </a>
                    </li>
                </ul>
                @{ 
                    TempData.Keep("admin");
                }
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer class="tm-footer row tm-mt-small">
        <div class="col-12 font-weight-light">
            <p class="text-center text-white mb-0 px-4 small">
                Copyright &copy; <b>2018</b> All rights reserved.

                Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
            </p>
        </div>
    </footer>

    <script src=@Url.Content("~/Areas/Admin/Content/js/jquery-3.3.1.min.js")></script>
    <!-- https://jquery.com/download/ -->
    <script src=@Url.Content("~/Areas/Admin/Content/jquery-ui-datepicker/jquery-ui.min.js")></script>
    <!-- https://jqueryui.com/download/ -->
    <script src=@Url.Content("~/Areas/Admin/Content/js/bootstrap.min.js")></script>
    <!-- https://getbootstrap.com/ -->
    <script src=@Url.Content("~/Areas/Admin/Content/js/Chart.min.js")></script>
    <script src=@Url.Content("~/Areas/Admin/Content/js/moment.min.js")></script>
    <script src=@Url.Content("~/Areas/Admin/Content/js/tooplate-scripts.js")></script>
    @*<script src=@Url.Content("~/Areas/Admin/Content/js/tooplate-scripts.js")></script>*@
    <script>
      $(function() {
        $("#expire_date").datepicker({
          defaultDate: "10/22/2020"
        });
      });
    </script>
    
</body>
</html>
